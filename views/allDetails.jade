doctype html
html(lang="en")
	link(href='/style/allDetails.css', rel='stylesheet')
	script(type='text/javascript').
		var createFbButton = function(d, s, id){
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); 
			js.id = id;
			js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=1244021775614809";
			fjs.parentNode.insertBefore(js, fjs);
		}
		createFbButton(document, 'script', 'facebook-jssdk');
	body
		h1 Git Status
		div(class='wrapper')
			div(class="fb-login-button" data-max-rows="4" data-size="xlarge" data-show-faces="false" data-auto-logout-link="true" id="facebook")
			div(class='header')
				form(name="searchForm",method="get",action="search",id="searchForm")
					input(type="text", name="gitId",placeholder="Enter a gitHub id...",id="search" required)
					input(type="submit",value="Search",id="submit")
				h2 ALL STEP-2015 INTERNS
			div(class='nameContainer')
				each user in basicData
						div(class='nameBlock_new')
							div(class='name') !{user.name}
								div(class='repo-details')
									div(class='left')
										label(class='decor') Total Repos
										h3(class='count-labler') !{user.totalCount}
									div(class='right')
										label(class='decor') Repositories
										li !{user.repos[0]}
										li !{user.repos[1]}
										a(href='/interns/'+user.name)
											li(style='float:right') More...
